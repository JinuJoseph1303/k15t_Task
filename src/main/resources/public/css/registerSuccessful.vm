body {
    font-family: Tahoma, Geneva, sans-serif;
    font-size: 13px;
    font-weight: 400;
    color: #3a474e;
    margin: 0;
}

h1 {
    padding-left: 71px;
    padding-top: 20px;
}

h1 span {
    color: #000;
    margin: 5px 0;
    padding: 5px 25px 5px;
    background-color: #fff;
    font-size: 17px;
    line-height: 15px;
}

form {
    width: 600px;
    padding: 20px;
    padding-top: 38px;
}

.header {
    padding: 15px;
}

.bannerText {
    min-height: 140px;
    background-color: #4af;
    display: flex;
}

input:invalid {
	border:2px solid red;
}

input:valid {
	border:1px solid black;
}

select:valid {
	border:1px solid black;
}



